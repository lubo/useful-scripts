#!/bin/sh

if [ "$#" -lt 1 ]; then
	echo "Usage: $(basename "$0") URL"

	exit 1
fi

KODI_HOST=${KODI_HOST:-"localhost:8080"}

curl -H "Content-Type: application/json" -X POST -d '
{
	"id": '"${RANDOM}"',
	"jsonrpc": "2.0",
	"method": "Player.Open",
	"params": {
		"item": {
			"file": "'"$1"'"
		}
	}
}
' "http://${KODI_HOST}/jsonrpc"
